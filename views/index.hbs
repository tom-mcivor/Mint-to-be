
<ul class="cards">
  {{#each herbs}}
  <li class="card">
  <img class="img" src="images/{{name}}.jpg" alt="{{name}}"><br>
    <div class="herbs">
      <span class="title">{{name}}</span>
      <p class="data">Height: {{height}}</p>
      <br>
      <a href="/{{id}}/edit">edit herb</a><br>
      <a href="/herb/{{id}}/delete">delete herb</a>
    </div>
  </li>
  <br>
  {{/each}}
</ul>


<div class="add">
<a href="/add"><button class="add-button">Add new herb</button></a>
</div>

